# Authentication Configuration

# JWT Settings
JWT_SECRET_KEY=your-secret-key-here-change-this
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost/shopify_mcp

# Security Settings
BCRYPT_ROUNDS=12

# API Token Settings
API_TOKEN_EXPIRE_DAYS=365

# Organization Settings
DEFAULT_ORG_NAME=Default Organization

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://shopify-mcp.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/shopify-mcp/auth.log