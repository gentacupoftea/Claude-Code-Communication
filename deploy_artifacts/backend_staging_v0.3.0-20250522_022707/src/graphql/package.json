{
  "name": "@shopify-mcp/graphql-client",
  "version": "1.0.0",
  "description": "Optimized GraphQL client for Shopify MCP Server with batching, caching, and rate limiting",
  "main": "optimized-client.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "benchmark": "node performance-benchmark.js",
    "lint": "eslint *.js",
    "lint:fix": "eslint *.js --fix"
  },
  "dependencies": {
    "@apollo/client": "^3.8.0",
    "graphql": "^16.8.0",
    "ioredis": "^5.3.0",
    "winston": "^3.11.0",
    "limiter": "^2.1.0",
    "cli-table3": "^0.6.3"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nock": "^13.4.0",
    "ioredis-mock": "^8.9.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "keywords": [
    "shopify",
    "graphql",
    "apollo",
    "mcp",
    "batching",
    "caching",
    "rate-limiting"
  ],
  "author": "Shopify MCP Team",
  "license": "MIT",
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "*.js",
      "!coverage/**",
      "!node_modules/**",
      "!performance-benchmark.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "jest": true,
      "es2021": true
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100
  }
}