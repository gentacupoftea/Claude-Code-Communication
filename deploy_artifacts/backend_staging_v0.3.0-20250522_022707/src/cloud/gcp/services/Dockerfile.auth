# Auth Service Dockerfile
FROM node:18-alpine

# Install dependencies
RUN apk add --no-cache python3 make g++

# Create app directory
WORKDIR /app

# Copy package files
COPY package*.json ./
COPY src/cloud/gcp/services/package*.json ./src/cloud/gcp/services/

# Install dependencies
RUN npm ci --only=production

# Copy application code
COPY src/cloud/gcp/config ./src/cloud/gcp/config
COPY src/cloud/gcp/core ./src/cloud/gcp/core
COPY src/cloud/gcp/services/AuthService.ts ./src/cloud/gcp/services/

# Build TypeScript
RUN npm run build

# Create non-root user
RUN addgroup -g 1001 -S nodejs
RUN adduser -S nodejs -u 1001
USER nodejs

# Expose port
EXPOSE 3001

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD node -e "require('http').get('http://localhost:3001/health', (res) => process.exit(res.statusCode === 200 ? 0 : 1))"

# Start service
CMD ["node", "dist/services/AuthService.js"]