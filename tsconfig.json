{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules", 
    "deploy_artifacts/**/*",
    "admin-dashboard/**/*",
    "admin_dashboard/**/*",
    "cypress/**/*",
    "src/tests/**/*",
    "frontend-v2/**/*",
    "src/orchestrator/**/*",
    "src/server.ts",
    "src/optimization/**/*",
    "multiLLM_system/**/*",
    "app/**/*",
    "src/hooks/**/*",
    "src/components/**/*",
    "src/lib/**/*",
    "persona-analysis/**/*",
    "src/cloud/**/*",
    "src/database/**/*",
    "src/config/**/*",
    "src/ai/**/*",
    "src/ai_chat/**/*",
    "src/api/**/*",
    "scripts/**/*"
  ]
}
