{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules", 
    "deploy_artifacts/**/*",
    "admin-dashboard/**/*",
    "admin_dashboard/**/*",
    "cypress/**/*",
    "src/tests/mocks/**/*",
    "src/tests/setup.ts",
    "src/tests/utils/renderWithProviders.tsx",
    "persona-analysis/**/*",
    "frontend-v2/**/*",
    "multiLLM_system/**/*",
    "backend/**/*",
    "src/cloud/**/*",
    "src/ai/**/*",
    "src/ai_chat/**/*",
    "src/api/file_import/**/*",
    "src/data_processing/**/*",
    "src/file_import/**/*",
    "src/google_sheets/**/*",
    "src/middleware/**/*",
    "src/orchestrator/**/*",
    "src/server.ts",
    "src/api/__tests__/**/*",
    "scripts/**/*",
    "tests/**/*"
  ]
}
