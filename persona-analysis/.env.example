# Persona Analysis Service Configuration
# ペルソナ分析サービス設定

# Server Configuration
NODE_ENV=development
PORT=8002
LOG_LEVEL=info
LOG_DIR=./logs

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4

# Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-opus-20240229

# Google Cloud Configuration
GOOGLE_APPLICATION_CREDENTIALS=./path-to-your-service-account-key.json
GOOGLE_CLOUD_PROJECT=your-project-id

# File Upload Configuration
MAX_FILE_SIZE=524288000  # 500MB in bytes
ALLOWED_FILE_TYPES=video/mp4,video/avi,video/mov,application/pdf,text/csv,application/json

# Job Queue Configuration
QUEUE_CONCURRENCY=2
JOB_TIMEOUT=300000  # 5 minutes in milliseconds

# Report Generation
REPORT_OUTPUT_DIR=./reports
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser  # For Docker

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Security
JWT_SECRET=your-jwt-secret-here
API_KEY_HEADER=X-API-Key