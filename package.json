{
  "name": "shopify-mcp-server",
  "version": "0.3.0",
  "description": "Shopify MCP Server with TypeScript support",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn ./src/cloud/gcp/index.ts",
    "start": "node dist/src/cloud/gcp/index.js",
    "test": "jest",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@google-cloud/error-reporting": "^3.0.0",
    "express": "^4.18.0",
    "opossum": "^6.3.0",
    "winston": "^3.8.0",
    "dotenv": "^16.0.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.15.0",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "eslint": "^8.35.0",
    "jest": "^29.4.0",
    "ts-jest": "^29.0.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  }
}