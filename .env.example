# Shopify MCP Server Configuration Example
# Copy this file to .env and fill in your actual values

# Shop Configuration
SHOPIFY_SHOP_NAME=your-shop-name
SHOPIFY_API_VERSION=2025-04

# Authentication
SHOPIFY_ACCESS_TOKEN=shpat_your_access_token_here
SHOPIFY_API_KEY=your_api_key_here
SHOPIFY_API_SECRET_KEY=your_api_secret_here

# GraphQL Configuration (v0.2.0+)
SHOPIFY_USE_GRAPHQL=true
SHOPIFY_BATCH_QUERIES=true
SHOPIFY_GRAPHQL_CACHE_TTL=300

# Performance Configuration
INSTALL_RETRY=3
INSTALL_TIMEOUT=120
NETWORK_TIMEOUT=30

# Logging Configuration
LOG_LEVEL=INFO
MCP_LOG_LEVEL=INFO

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=1000
CACHE_MAX_MEMORY_MB=100
CACHE_STRATEGY=lru

# Network Resilience (PR #25)
OFFLINE_MODE=false
VENDOR_DIR=./vendor
