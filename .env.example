# Database Configuration
DATABASE_URL=sqlite:///./shopify_mcp.db
# For PostgreSQL: postgresql://user:password@localhost/dbname

# Database Security Settings
DB_SSL_MODE=prefer
# Production: require, Development: prefer, disable
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_RECYCLE=3600
DB_POOL_TIMEOUT=30

# Security Configuration
SECRET_KEY=your-secret-key-here
NODE_ENV=development

# Encryption Key Management (choose one method)
# Method 1: HashiCorp Vault (recommended for production)
VAULT_ADDR=https://vault.example.com
VAULT_TOKEN=your-vault-token

# Method 2: AWS KMS (for AWS deployments)
AWS_KMS_KEY_ID=your-kms-key-id
ENCRYPTED_KEY=your-encrypted-key-hex

# Method 3: Secure file (better than env vars)
ENCRYPTION_KEY_FILE=/etc/conea/encryption.key

# Method 4: Environment variable (development only, least secure)
ENVIRONMENT_ENCRYPTION_KEY=your-fernet-encryption-key-here

# Authentication Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Environment Management
ENVIRONMENT_VARIABLE_ENCRYPTION_ENABLED=true

# MongoDB認証情報
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password

# Redis認証情報
REDIS_PASSWORD=redis_password

# Conea API認証情報
CONEA_SHOP_NAME=your-shop-name
CONEA_ACCESS_TOKEN=your-access-token
CONEA_API_VERSION=2025-04

# API Rate Limit設定
CONEA_RATE_LIMIT_RPS=2.0
CONEA_RATE_LIMIT_BURST=10
CONEA_RATE_LIMIT_LOG=true

# ログ設定
LOG_LEVEL=info

# 環境設定
NODE_ENV=development

# サーバーポート設定
PORT=8080