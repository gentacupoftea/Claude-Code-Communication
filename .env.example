# Shopify MCP Server Configuration Example
# Copy this file to .env and fill in your actual values

# Server Configuration
HOST=127.0.0.1
PORT=5000
USE_FASTAPI=false
RELOAD=false

# Shop Configuration
SHOPIFY_SHOP_NAME=your-shop-name
SHOPIFY_API_VERSION=2025-04

# Authentication
SHOPIFY_ACCESS_TOKEN=shpat_your_access_token_here
SHOPIFY_API_KEY=your_api_key_here
SHOPIFY_API_SECRET_KEY=your_api_secret_here

# GraphQL Configuration (v0.2.0+)
SHOPIFY_USE_GRAPHQL=true
SHOPIFY_BATCH_QUERIES=true
SHOPIFY_GRAPHQL_CACHE_TTL=300

# Performance Configuration
INSTALL_RETRY=3
INSTALL_TIMEOUT=120
NETWORK_TIMEOUT=30

# Logging Configuration
LOG_LEVEL=INFO
MCP_LOG_LEVEL=INFO
UVICORN_LOG_LEVEL=info

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=1000
CACHE_MAX_MEMORY_MB=100
CACHE_STRATEGY=lru

# Shopify Rate Limiting (v0.2.1+)
RATE_LIMIT_ENABLED=true
SHOPIFY_RATE_LIMIT_RPS=2.0
SHOPIFY_RATE_LIMIT_BURST=10
SHOPIFY_RATE_LIMIT_LOG=true

# Network Resilience (PR #25)
OFFLINE_MODE=false
VENDOR_DIR=./vendor

# Google Analytics Configuration
GA_CREDENTIALS_PATH=/path/to/service-account.json
GA_PROPERTY_ID=123456789
GA_CACHE_ENABLED=true
GA_CACHE_TTL=300
GA_API_TIMEOUT=30
GA_MAX_RETRIES=3

# Redis Configuration (for GA cache)
REDIS_URL=redis://localhost:6379/0

# Google Analytics Application
GA_APP_NAME=Google Analytics MCP Server
GA_APP_VERSION=1.0.0
GA_LOG_LEVEL=INFO

# GA Security Configuration
GA_CORS_ORIGINS=http://localhost:3000,http://localhost:8000
GA_API_KEY_HEADER=X-API-Key

# GA Rate Limiting
GA_RATE_LIMIT_ENABLED=true
GA_RATE_LIMIT_REQUESTS=50

# GA Report Defaults
GA_DEFAULT_LIMIT=1000
GA_MAX_LIMIT=10000
GA_DEFAULT_DATE_RANGE=30daysAgo

# E2E Testing Configuration
E2E_BASE_URL=http://localhost:8000
E2E_TIMEOUT=60000
E2E_HEADLESS=true

# MCP Configuration
MCP_SERVER_NAME=shopify-mcp-server
MCP_SERVER_DESCRIPTION=Shopify API integration with Claude Desktop
MCP_SERVER_VERSION=0.3.0
