# API Keys (required for production)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_gemini_api_key_here
GOOGLE_CLOUD_PROJECT_ID=your_google_cloud_project_id
GOOGLE_CLOUD_LOCATION=us-central1

# MultiLLM Configuration
ENABLE_CLAUDE=true
ENABLE_OPENAI=true
ENABLE_GEMINI=true

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=3600

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_METRICS=true
ENABLE_TRACING=true

# Database (if needed for future features)
DATABASE_URL=postgresql://user:password@localhost:5432/conea

# Security
JWT_SECRET=your_jwt_secret_here
CORS_ORIGIN=https://yourdomain.com

# Model Configuration
DEFAULT_LLM_PROVIDER=claude
ENABLE_FALLBACK=true
MAX_TOKENS=2000
TEMPERATURE=0.7

# Benchmark Testing (optional)
ENABLE_BENCHMARKS=false
BENCHMARK_SCHEDULE=0 2 * * *

# Shopify API Configuration (optional)
SHOPIFY_API_KEY=your_shopify_api_key_here
SHOPIFY_API_SECRET=your_shopify_api_secret_here
SHOPIFY_STORE_DOMAIN=your_store_name
SHOPIFY_ACCESS_TOKEN=your_shopify_access_token_here
SHOPIFY_API_VERSION=2024-01
SHOPIFY_SCOPES=read_products,read_orders,read_customers