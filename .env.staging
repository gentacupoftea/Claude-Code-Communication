# Conea ステージング環境設定

# 基本設定
NODE_ENV=staging
PORT=8000
API_HOST=0.0.0.0

# フロントエンド URL
FRONTEND_URL=https://stagingapp.conea.ai
BACKEND_URL=https://staging.conea.ai

# CORS設定
CORS_ORIGINS=https://stagingapp.conea.ai,https://staging.conea.ai

# Database (ステージング用)
DATABASE_URL=postgresql://staging_user:staging_password@staging-db:5432/conea_staging
DB_HOST=staging-db.conea.internal
DB_USER=conea_staging_user
DB_PASSWORD=staging_db_password_placeholder
DB_NAME=conea_staging
DB_PORT=5432

# Redis (ステージング用)
REDIS_URL=redis://staging-redis:6379
REDIS_HOST=staging-redis.conea.internal
REDIS_PORT=6379
REDIS_PASSWORD=staging_redis_password_placeholder

# Shopify API設定 (ステージング用)
SHOPIFY_API_VERSION=2024-01
SHOPIFY_WEBHOOK_SECRET=staging-webhook-secret
SHOPIFY_API_KEY=staging_shopify_api_key_placeholder
SHOPIFY_API_SECRET=staging_shopify_api_secret_placeholder
SHOPIFY_SCOPES=read_products,write_products,read_orders,read_customers

# フロントエンド設定
REACT_APP_API_URL=https://staging.conea.ai
REACT_APP_WEBSOCKET_URL=wss://staging.conea.ai/ws
REACT_APP_OAUTH_CALLBACK_URL=https://stagingapp.conea.ai/oauth/callback
REACT_APP_ENABLE_DEBUG=true
REACT_APP_PERFORMANCE_MONITORING=true

# Google Analytics (ステージング用)
GA_PROPERTY_ID=staging-ga-property-id
GA_MEASUREMENT_ID=G-STAGING123456

# Slack設定 (ステージング用)
SLACK_SIGNING_SECRET=staging-slack-signing-secret
SLACK_BOT_TOKEN=xoxb-staging-token

# 認証設定
JWT_SECRET=staging-jwt-secret-key
JWT_EXPIRY=8h
SESSION_SECRET=staging-session-secret
ADMIN_PASSWORD=staging_admin_password_placeholder
COOKIE_SECURE=true
COOKIE_HTTP_ONLY=true

# OpenMemory設定 (ステージング用)
OPENMEMORY_URL=https://staging-openmemory.conea.ai
OPENMEMORY_API_KEY=staging-openmemory-key

# ログレベル
LOG_LEVEL=debug
MCP_LOG_LEVEL=DEBUG

# ヘルスチェック設定
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# ドメイン設定
DOMAIN_NAME=stagingapp.conea.ai
API_DOMAIN_NAME=staging.conea.ai
EXPECTED_IP=34.120.0.79

# APIキー設定（テスト用）
API_KEY_OPENAI=sk-test-openai-key-for-staging
API_KEY_ANTHROPIC=sk-test-anthropic-key-for-staging
API_KEY_GEMINI=test-gemini-key-for-staging

# テスト用認証情報
TEST_USERNAME=test-user
TEST_PASSWORD=test-password
TEST_API_KEY=test-api-key-for-staging

# コンテナ設定
MEMORY=2Gi
CPU=2
MIN_INSTANCES=1
MAX_INSTANCES=3

# 分析設定
ENABLE_ANALYTICS=true
ANALYTICS_ENDPOINT=https://analytics.conea.ai/collect

# レガシー互換性（旧パッケージ名）
SHOPIFY_MCP_PROJECT_ID=conea-project-staging
SHOPIFY_MCP_SERVICE_NAME=conea-staging
SHOPIFY_MCP_SERVICE_ACCOUNT=conea-staging@conea-project-staging.iam.gserviceaccount.com