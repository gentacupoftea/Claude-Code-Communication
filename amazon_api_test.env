# Amazon API Test Configuration
# Replace placeholder values with actual credentials before running tests

# AWS Credentials
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# Amazon Marketplace API Credentials
AMAZON_SELLER_ID=your_seller_id
AMAZON_MARKETPLACE_ID=your_marketplace_id
AMAZON_APP_CLIENT_ID=your_client_id
AMAZON_APP_CLIENT_SECRET=your_client_secret

# OAuth Configuration
# Authentication method: 'client_credentials' (default) or 'refresh_token'
AMAZON_AUTH_METHOD=client_credentials

# OAuth settings (for refresh_token method)
# AMAZON_REDIRECT_URI=https://yourngrok.ngrok.io/amazon/callback
# AMAZON_REFRESH_TOKEN=your_refresh_token

# Optional Settings
# AMAZON_API_ENDPOINT=https://sellingpartnerapi-na.amazon.com
AMAZON_API_TEST_MODE=true

# API Access Scopes (for information only - set in client code)
# 基本スコープ
# sellingpartnerapi::notifications
# sellingpartnerapi::catalog:read
# sellingpartnerapi::orders:read
# sellingpartnerapi::inventory:read
#
# 財務・レポート関連スコープ
# sellingpartnerapi::finances:read
# sellingpartnerapi::reports:read
#
# 分析スコープ
# sellingpartnerapi::analytics:read
#
# ベンダー関連スコープ
# sellingpartnerapi::vendor:read
# sellingpartnerapi::vendor_orders:read
#
# Amazon Business関連スコープ
# sellingpartnerapi::business_reports:read
