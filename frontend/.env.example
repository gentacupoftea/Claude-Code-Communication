# Frontend Environment Variables
# Copy this file to .env.local and update with your values

# API Configuration
REACT_APP_API_URL=http://localhost:8000/api/v1
REACT_APP_WS_URL=ws://localhost:8000/ws
REACT_APP_MCP_API_URL=http://localhost:8765

# Environment
REACT_APP_ENVIRONMENT=development
REACT_APP_ENV=development

# Authentication
REACT_APP_USE_MOCK_AUTH=false

# Monitoring & Analytics
REACT_APP_ANALYTICS_ENDPOINT=http://localhost:8000/api/v1/analytics
REACT_APP_ERROR_TRACKING_ENDPOINT=http://localhost:8000/api/v1/errors
REACT_APP_ENABLE_DEV_ANALYTICS=false

# Build Information
REACT_APP_VERSION=1.0.0
REACT_APP_BUILD_DATE=

# Shopify Configuration (These are typically managed by the backend)
# SHOPIFY_API_KEY=your_shopify_api_key
# SHOPIFY_API_SECRET=your_shopify_api_secret
# SHOPIFY_SCOPES=read_products,write_products,read_orders,write_orders,read_customers
# SHOPIFY_WEBHOOK_URL=https://your-domain.com/api/v1/shopify/webhooks

# Feature Flags
REACT_APP_ENABLE_OFFLINE_MODE=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_AI_FEATURES=false

# Cache Configuration
REACT_APP_CACHE_TTL=300000

# Debug
REACT_APP_DEBUG_MODE=false